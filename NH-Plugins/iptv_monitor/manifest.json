{
  "id": "iptv_monitor",
  "name": "IPTV频道同步",
  "description": "同步IPTV频道组播信息，并推送通知",
  "author": "Alano",
  "logo": "/data/plugins/iptv_monitor/logo.jpg",
  "thumbnailurl": "/data/plugins/iptv_monitor/logo_thum.png",
  "version": "0.0.1",
  "documentation": "",
  "path": "/iptv_monitor",
  "configField": [
    {
        "fieldName": "udpxy_url",
        "fieldType": "string",
        "label": "UDPXY的URL地址",
        "helpText": "请输入UDPXY的URL地址，用于生成m3u文件",
        "defaultValue": ""
    },
    {
        "fieldName": "ftp_switch",
        "fieldType": "switch",
        "label": "将最新的M3U文件更新到FTP",
        "defaultValue": false
    },
    {
        "fieldName": "FTP_SERVER",
        "fieldType": "string",
        "label": "FTP服务器地址",
        "helpText": "",
        "defaultValue": "",
        "conditional": {
          "field": "ftp_switch",
          "operator": "equals",
          "value": true
        }
    },
    {
        "fieldName": "FTP_PORT",
        "fieldType": "string",
        "label": "FTP服务器端口",
        "helpText": "",
        "defaultValue": "",
        "conditional": {
          "field": "ftp_switch",
          "operator": "equals",
          "value": true
        }
    },
    {
        "fieldName": "FTP_USERNAME",
        "fieldType": "string",
        "label": "FTP服务器用户名",
        "helpText": "",
        "defaultValue": "",
        "conditional": {
          "field": "ftp_switch",
          "operator": "equals",
          "value": true
        }
    },
    {
        "fieldName": "FTP_PASSWORD",
        "fieldType": "string",
        "label": "FTP服务器密码",
        "helpText": "",
        "defaultValue": "",
        "conditional": {
          "field": "ftp_switch",
          "operator": "equals",
          "value": true
        }
    },
    {
        "fieldName": "FTP_DIR",
        "fieldType": "string",
        "label": "需要替换的m3u文件所在的FTP服务器目录，/img/iptv",
        "helpText": "",
        "defaultValue": "",
        "conditional": {
          "field": "ftp_switch",
          "operator": "equals",
          "value": true
        }
    },

    {
        "fieldName": "notify_switch",
        "fieldType": "switch",
        "label": "启用通知",
        "defaultValue": true
    },
    {
      "fieldName": "bind_channel",
      "fieldType": "enum",
      "label": "通知推送渠道",
      "required": false,
      "enumValuesRef": "ChannelList",
      "multiValue": false,
      "conditional": {
        "field": "notify_switch",
        "operator": "equals",
        "value": true
      }
    },
    {
        "fieldName": "push_img_url",
        "fieldType": "string",
        "label": "通知封面图片链接",
        "required": false,
        "helpText": "",
        "defaultValue": "",
        "conditional": {
          "field": "notify_switch",
          "operator": "equals",
          "value": true
      }
    },
    {
        "fieldName": "push_link_url",
        "fieldType": "string",
        "label": "通知点击跳转链接",
        "required": false,
        "helpText": "",
        "defaultValue": "",
        "conditional": {
        "field": "notify_switch",
        "operator": "equals",
        "value": true
      }
    },
    {
      "fieldName": "task_switch",
      "fieldType": "switch",
      "label": "定时同步任务",
      "helpText": "",
      "defaultValue": false
    },
    {
      "fieldName": "cron_task_time",
      "fieldType": "string",
      "label": "",
      "helpText": "定时任务的时间，格式为五位 cron 表达式",
      "defaultValue": "0 12 * * *",
      "required": false,
      "conditional": {
        "field": "task_switch",
        "operator": "equals",
        "value": true
      }
    }
  ]
}