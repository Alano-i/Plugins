{
  "name": "qb_tools",
  "title": "QB 工具箱",
  "author": "Alano",
  "description": "➊ 自动添加标签 ➋ 修改tracker ➌ 指定 PLEX 服务器刷新局部目录 ➍ 定时扫描 PELX 媒体库。详见帮助文档",
  "version": "1.37",
  "requirements": null,
  "configField": [
    {
      "fieldName": "qb_urls",
      "fieldType": "String",
      "label": "QB URL，支持多个，一行一个",
      "helperText": "",
      "defaultValue": "http://10.0.0.1"
    },
    {
      "fieldName": "qb_ports",
      "fieldType": "String",
      "label": "QB端口，支持多个，一行一个",
      "helperText": "",
      "defaultValue": "8080"
    },
    {
      "fieldName": "usernames",
      "fieldType": "String",
      "label": "QB用户名，支持多个，一行一个",
      "helperText": "",
      "defaultValue": "admin"
    },
    {
      "fieldName": "passwords",
      "fieldType": "String",
      "label": "QB密码，支持多个，一行一个",
      "helperText": "",
      "defaultValue": "adminadmin"
    },
    {
      "fieldName": "check_interval",
      "fieldType": "String",
      "label": "QB检测间隔（单位：秒）",
      "helperText": "",
      "defaultValue": "30"
    },
    {
      "fieldName": "delete_task",
      "fieldType": "Bool",
      "label": "自动删种",
      "helperText": "",
      "defaultValue": false
    },
    {
      "fieldName": "save_path",
      "fieldType": "String",
      "label": "需要自动删种任务的下载文件夹，末尾带/，一行一个",
      "helperText": "",
      "defaultValue": ""
    },
    {
      "fieldName": "delete_local",
      "fieldType": "Bool",
      "label": "自动删除本地文件",
      "helperText": "",
      "defaultValue": false
    },

    {
      "fieldName": "delete_hard",
      "fieldType": "Bool",
      "label": "自动删除硬链接文件",
      "helperText": "自动删除硬链接文件需要同时开启自动删除本地文件才会生效",
      "defaultValue": false
    },


    {
      "fieldName": "hardlink_paths",
      "fieldType": "String",
      "label": "下载文件夹对应的硬链接目录，末尾不带/，一行一个",
      "helperText": "",
      "defaultValue": ""
    },
    {
      "fieldName": "del_day",
      "fieldType": "String",
      "label": "自动删除几天前的种子任务，默认7天",
      "helperText": "",
      "defaultValue": "7"
    },
    {
      "fieldName": "add_tag",
      "fieldType": "Bool",
      "label": "开启自动添加标签 (保存设置后会自动重启)",
      "helperText": "",
      "defaultValue": false
    },
    {
      "fieldName": "auto_edit_tracker",
      "fieldType": "Bool",
      "label": "开启自动修改兽站 tracker (保存设置后会自动重启)",
      "helperText": "",
      "defaultValue": false
    },

    {
      "fieldName": "update_plex_library_on",
      "fieldType": "Bool",
      "label": "每天凌晨 01:30 扫描 PLEX 媒体库",
      "helperText": "",
      "defaultValue": false
    },
    {
      "fieldName": "library_set",
      "fieldType": "String",
      "label": "需扫描的媒体库名称（默认全库：ALL）,英文逗号','间隔",
      "helperText": "",
      "defaultValue": "ALL"
    },
    {
      "fieldName": "random_set",
      "fieldType": "String",
      "label": "通知 PLEX 局部刷新延时，英文逗号隔开。400,600：400到600秒随机延时，400,400：延时400秒",
      "helperText": "",
      "defaultValue": "400,600"
    }
  ],
  "logoUrl": "/plugins/qb_tools/logo.png",
  "githubUrl": "",
  "helpDocUrl": "https://github.com/Alano-i/wecom-notification/tree/main/MR-Plugins/qb_tools",
  "payImageUrl": "https://p.xmoviebot.com/donate/alano_wechat.jpg",
  "dependencies": {
    "appVersion": ">=1.9.30"
  }
}